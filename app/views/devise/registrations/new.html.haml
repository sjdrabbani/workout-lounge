%h2.text-center
  Sign up

.col-md-10
  = form_for(resource, as: resource_name, html: {class: 'form-horizontal'}, url: registration_path(resource_name)) do |f|
    = devise_error_messages!

    .form-group
      .control-label.col-md-3
        = f.label :first_name
      .col-md-9
        = f.text_field :first_name, autofocus: true, class: 'form-control'
    .form-group
      .control-label.col-md-3
        = f.label :last_name
      .col-md-9
        = f.text_field :last_name, autocomplete: "off", class: 'form-control'

      .control-label.col-md-3
        = f.label :email
      .col-md-9
        = f.email_field :email, class: 'form-control'
    .form-group
      .control-label.col-md-3
        = f.label :password
      .col-md-9
        = f.password_field :password, autocomplete: "off", class: 'form-control'

    .form-group
      .control-label.col-md-3
        = f.label :password_confirmation
      .col-md-9
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
    .form-group
      .col-md-offset-3.col-md9
        = f.submit 'Sign up', class: 'btn btn-success btn-lg'
    .form-group
      .col-md-offset-3.col-md-9
        = render "devise/shared/links"
